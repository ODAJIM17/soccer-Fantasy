@page "/countries"
@using SFS.Domain.Entities

<h3>@Localizer["Countries"]</h3>

<div class="mb-3">
    <a class="btn btn-sm btn-primary" href="/countries/create">@Localizer["New"] @Localizer["Country"]</a>
</div>

<GenericList MyList="countries">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Localizer["Country"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in countries!)
                {
                    <tr>
                        <td>
                            @country.Name
                        </td>
                        <td>
                            <a class="btn btn-warning">@Localizer["Edit"]</a>
                            <button class="btn btn-danger">@Localizer["Delete"]</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>

@code{

    [Inject] private IStringLocalizer<Literals> Localizer { get; set; } = null!;
    [Inject] private ICountryRepository Repository { get; set; } = null!;

    private List<Country>? countries;

    protected override async Task OnInitializedAsync()
    {
        countries = await Repository.GetAllAsync();
    }
}